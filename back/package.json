{
    "name": "node-js-getting-started",
    "version": "0.3.0",
    "description": "A sample Node.js app using Express 4",
    "engines": {
        "node": "18.x"
    },
    "main": "index.js",
    "scripts": {
        "setup-githooks": "./githooks/setup.sh",
        "prettier": "prettier --check --cache '*.json' 'src/**/*.ts'",
        "prettier:fix": "prettier -w --cache '*.json' 'src/**/*.ts'",
        "lint": "eslint  \"src/**/*.[jt]s\"",
        "lint:fix": "npm run lint --quiet --fix",
        "format": "prettier --write .",
        "heroku:login": "npx heroku login",
        "heroku:deploy": "npm run tests:all && git push heroku main",
        "heroku:force-deploy": "git push -f heroku main",
        "postinstall": "tsc",
        "env": "podman-compose -f src/tools/docker-compose.yml up -d",
        "env:stop": "podman-compose -f src/tools/docker-compose.yml down",
        "serve": "nodemon dist/index.js",
        "watch": "rm -fr dist/ && tsc -w",
        "tests": "PORT=3001 ENV=tests src/tools/init-db.sh --tests && PORT=3001 ENV=tests mocha --unhandled-rejections=strict --config .mocha/routes.json",
        "tests:all": "npm run tests:framework && npm run tests",
        "tests:framework": "PORT=3001 ENV=tests src/tools/init-db.sh --tests && PORT=3001 ENV=tests mocha --unhandled-rejections=strict --config .mocha/framework.json"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.485.0",
        "@aws-sdk/s3-request-presigner": "^3.485.0",
        "@slack/webhook": "^7.0.2",
        "aws-sdk-client-mock": "^4.0.0",
        "cors": "^2.8.5",
        "ejs": "^3.1.5",
        "express": "^4.15.2",
        "express-json-validator-middleware": "^3.0.1",
        "express-oauth2-jwt-bearer": "^1.1.0",
        "formidable": "^3.5.1",
        "luxon": "^3.4.4",
        "mime-types": "^2.1.35",
        "mustache-express": "^1.3.2",
        "mysql2": "^3.6.5"
    },
    "devDependencies": {
        "@smithy/util-stream": "^2.1.1",
        "@types/chai": "^4.3.11",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/formidable": "^3.4.5",
        "@types/luxon": "^3.3.7",
        "@types/mime-types": "^2.1.4",
        "@types/mocha": "^10.0.6",
        "@types/mustache-express": "^1.2.5",
        "@types/mysql": "^2.15.24",
        "@types/sinon": "^17.0.2",
        "@types/supertest": "^6.0.1",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.10.0",
        "aws-sdk-client-mock-jest": "^4.0.0",
        "chai": "^4.3.10",
        "eslint": "^8.54.0",
        "eslint-config-prettier": "^9.0.0",
        "got": "^14.2.1",
        "mocha": "^10.2.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.1.0",
        "sinon": "^17.0.1",
        "supertest": "^6.3.3",
        "tape": "^5.7.5",
        "typescript": "^5.2.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/statox/statox-backend"
    },
    "license": "MIT"
}
